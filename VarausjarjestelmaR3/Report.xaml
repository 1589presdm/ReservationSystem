        <GroupBox Header="Tiedonhaku">
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                <Label Content="Alkupäivä:"/>
                <Separator Width="20" Visibility="Hidden"/>
                <DatePicker x:Name="StartDatePicker" />
                <Separator Width="20" Visibility="Hidden"/>
                <Label Content="Loppupäivä:"/>
                <Separator Width="20" Visibility="Hidden"/>
                <DatePicker x:Name="EndDatePicker" />
                <Separator Width="40" Visibility="Hidden"/>
                <Button Content="Hae tiedot" Click="GetInfo_Click" Margin="5"/>

            </StackPanel>
        </GroupBox>

        <DataGrid x:Name="dataGridInvoices" Grid.Row="1" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Varaus ID" Binding="{Binding varausID}"/>
                <DataGridTextColumn Header="Alkupäivä" Binding="{Binding varaus_alkaa}"/>
                <DataGridTextColumn Header="Loppupäivä" Binding="{Binding varaus_paattyy}"/>
                <DataGridTextColumn Header="Nimi" Binding="{Binding asiakas_nimi}"/>
                <DataGridTextColumn Header="Puh#" Binding="{Binding asiakas_puhelin}"/>
                <DataGridTextColumn Header="Sähköposti" Binding="{Binding asiakas_sahkoposti}"/>
                <DataGridTextColumn Header="Varattu huone" Binding="{Binding huoneen_numeroID}"/>
                <DataGridTextColumn Header="Toimipiste" Binding="{Binding toimipiste_nimi}"/>
                <DataGridTextColumn Header="Tilattu palvelu" Binding="{Binding palvelu_tuote}"/>
                <DataGridTextColumn Header="Palvelu kpl" Binding="{Binding palvelu_maara}"/>
                <DataGridTextColumn Header="Lisätiedot" Binding="{Binding lisatiedot}"/>
            </DataGrid.Columns>
        </DataGrid>
